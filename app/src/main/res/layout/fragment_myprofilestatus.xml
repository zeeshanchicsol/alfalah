<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragments.AccountSetting.MyProfileStatusFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/ProgressbarMyProfileStatusFragment"
            style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"

            android:indeterminate="true"
            android:indeterminateTint="@color/colorUserProfileRed"
            android:indeterminateTintMode="src_in"
            android:visibility="visible" />

        <android.support.v7.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true"


            >

            <!--     <FrameLayout
                     android:layout_width="4dp"
                     android:layout_height="match_parent"
                     android:background="#FF0000" />-->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                android:padding="16dp">

                <TextView
                    android:id="@+id/TextViewMyProfileStatusTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/colorBlack" />

                <TextView
                    android:id="@+id/TextViewMyProfileStatusDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You can communicate &amp; interact with other members once your profile is 100% complete and verified. Here are current pending action items:"
                    android:textColor="@color/colorBlack" />


                <LinearLayout
                    android:id="@+id/LinearLayoutMyProfileStatusCompleteProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <com.chicsol.marrymax.widgets.faTextView
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:text="@string/fa_icon_profile_setting"
                            android:textColor="@color/colorTextRed"
                            android:textStyle="bold" />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Complete your profile"
                            android:textColor="@color/colorTextRed"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:text=" (Click Here to complete your profile)"
                        android:textSize="10sp" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/LinearLayoutMyProfileStatusVerifyEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <com.chicsol.marrymax.widgets.faTextView
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:text="@string/fa_icon_newmessage"
                            android:textColor="@color/colorTextRed"
                            android:textStyle="bold" />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email verification is pending "
                            android:textColor="@color/colorTextRed"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:text=" (You can resend verification code by clicking button, given below)"
                        android:textSize="10sp" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/LinearLayoutMyProfileStatusVerifyPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <com.chicsol.marrymax.widgets.faTextView
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:text="@string/fa_icon_phone"
                            android:textColor="@color/colorTextRed"
                            android:textStyle="bold" />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Phone Number verification is pending "
                            android:textColor="@color/colorTextRed"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:text=" (You can Add and Verify Number by clicking )"
                        android:textSize="10sp" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/LinearLayoutMyProfileStatusAdminApproval"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <com.chicsol.marrymax.widgets.faTextView
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:text="@string/fa_icon_phone"
                            android:textColor="@color/colorTextRed"
                            android:textStyle="bold" />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Admin Review is pending "
                            android:textColor="@color/colorTextRed"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:text=" (Under normal circumstances, a new profile is reviewed within 24 hours.)"
                        android:textSize="10sp" />
                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView


            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="horizontal"
                        android:padding="5dp"

                        >

                        <com.chicsol.marrymax.widgets.faTextView
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:text="@string/fa_icon_phone"
                            android:textColor="@color/colorBlack"
                            android:textStyle="bold" />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add Mobile Number "
                            android:textColor="@color/colorBlack" />

                        <LinearLayout
                            android:id="@+id/LinearLayoutVerifyMobile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <com.chicsol.marrymax.widgets.faTextView
                                android:id="@+id/famobbb1"
                                android:layout_width="20dp"
                                android:layout_height="wrap_content"


                                android:text="@string/fa_icon_accepted"
                                android:textColor="@color/colorDefaultGreen"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvVerified1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:text="Verified"
                                android:textColor="@color/colorDefaultGreen" />

                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/LinearlayoutMyProfileStatusPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.v7.widget.AppCompatButton
                            style="@style/Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginLeft="20dp"
                            android:text="Add Number"
                            android:textAllCaps="false"
                            android:textColor="@color/colorTextRed" />


                    </LinearLayout>
                </LinearLayout>


                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <com.chicsol.marrymax.widgets.faTextView
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:text="@string/fa_icon_newmessage"
                            android:textColor="@color/colorBlack"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/TextViewMyProfileStatusEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/colorBlack" />

                        <RelativeLayout
                            android:id="@+id/RelativeLayoutVerifyEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"

                            >

                            <com.chicsol.marrymax.widgets.faTextView
                                android:layout_width="20dp"
                                android:layout_height="wrap_content"
                                android:layout_toLeftOf="@+id/tvVerified"

                                android:text="@string/fa_icon_accepted"
                                android:textColor="@color/colorDefaultGreen"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvVerified"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:text="Verified"
                                android:textColor="@color/colorDefaultGreen" />

                        </RelativeLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/LinearlayoutMyProfileStatusEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <android.support.v7.widget.AppCompatButton
                            style="@style/Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="0dp"
                            android:layout_weight="1"
                            android:text="Resend Verification Email"
                            android:textAllCaps="false"
                            android:textColor="@color/colorTextRed" />

                        <android.support.v7.widget.AppCompatButton
                            style="@style/Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="0dp"
                            android:layout_weight="1"
                            android:text="Update Email"
                            android:textAllCaps="false" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>
</android.support.v4.widget.NestedScrollView>