<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="80dp"
    android:layout_height="wrap_content">

<!--<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    app:cardElevation="2dp"

    app:cardUseCompatPadding="true">-->

    <LinearLayout
        android:id="@+id/LinearLayoutMatchAidItemMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical">


        <LinearLayout
            android:background="#eee"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="40dp"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"


                android:layout_weight="2">
                <!--android:background="@drawable/border_dash_user_profile_box"-->
                <!-- android:src="@drawable/female_profile_100"-->
                <ImageView
                    android:id="@+id/ImageViewMatchAidmImage"
android:src="@mipmap/ic_launcher"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="8"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/TextViewMachAidmDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="5dp"
                    android:text="12-10-2015"
                    android:textColor="@color/colorBlack"
                    android:textSize="9sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/TextViewMachAidmAlias"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SHAH_R7"
                        android:textColor="@color/colorTextRed"
                        android:textSize="@dimen/text_size_up_h2"
                        android:textStyle="bold" />


                </LinearLayout>

                <TextView
                    android:id="@+id/TextViewMachAidmDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="I need MarryMax associate to get me the contact details of this profile."
                    android:textColor="@color/colorBlack"
                    android:textSize="12sp" />


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
<!--</android.support.v7.widget.CardView>-->
</LinearLayout>