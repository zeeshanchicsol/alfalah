<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/LinearLayoutAdvSearchItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="10dp"
    android:orientation="vertical"
    android:paddingBottom="3dp"

    android:paddingTop="3dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5">

                <com.chicsol.marrymax.widgets.mTextView
                    android:id="@+id/TextViewListSavSearchName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"

                    android:textColor="@color/colorTextRed" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center">

                <com.chicsol.marrymax.widgets.mTextView
                    android:id="@+id/TextViewListSavSearchDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textColor="@color/colorBlack" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="right">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/ImageViewListSavSearchMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:foregroundTint="@color/colorGrey"
                   app:srcCompat="@drawable/ic_more_vert_black_24dp_file" />

                <com.chicsol.marrymax.widgets.faTextView
                    android:id="@+id/faTextViewListSavSearcheClick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorGrey"
                    android:text="@string/fa_icon_edit"
                    android:visibility="gone" />

                <com.chicsol.marrymax.widgets.faTextView
                    android:id="@+id/faTextViewListSavSearchBlocked"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:backgroundTint="@color/colorGrey"
                    android:text="@string/fa_icon_trash"
                    android:visibility="gone" />


            </LinearLayout>


            <!--      <LinearLayout
                      android:layout_width="0dp"
                      android:layout_height="match_parent"
                android:gravity="center"
                      android:layout_weight="3">

                      <com.chicsol.marrymax.widgets.mTextView
                          android:id="@+id/TextViewListDate"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="03 Jul, 2016"
                          android:textColor="#333333" />

                  </LinearLayout>-->

            <!-- <LinearLayout
                 android:layout_width="0dp"
                 android:layout_height="match_parent"
                 android:layout_weight="1"
                 android:gravity="center"
                 android:orientation="horizontal">


             </LinearLayout>-->

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>